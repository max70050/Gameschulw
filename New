<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>Car Dodge Game</title>
  <style>
    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      background: #111;
      font-family: sans-serif;
      color: white;
    }

    h1 {
      text-align: center;
      margin-top: 10px;
    }

    #scoreboard {
      text-align: center;
      font-size: 18px;
      margin-bottom: 5px;
    }

    #gameArea {
      position: relative;
      width: 100%;
      max-width: 400px;
      height: 80vh;
      margin: 0 auto;
      background: #333;
      border: 4px solid white;
      overflow: hidden;
    }

    #car {
      position: absolute;
      bottom: 5%;
      width: 10%;
      aspect-ratio: 1/2;
      background: red;
      border-radius: 5px;
      left: 45%;
    }

    .obstacle {
      position: absolute;
      top: -20%;
      width: 10%;
      aspect-ratio: 1/2;
      background: yellow;
      border-radius: 5px;
    }

    .controls {
      display: flex;
      justify-content: space-around;
      max-width: 400px;
      margin: 15px auto;
    }

    .btn {
      flex: 1;
      margin: 0 5px;
      font-size: 20px;
      padding: 15px 10px;
      background: #555;
      color: white;
      border: none;
      border-radius: 10px;
      touch-action: manipulation;
    }

    .btn:active {
      background: #777;
    }
  </style>
</head>
<body>

<h1>Car Dodge Game</h1>
<div id="scoreboard">
  Punkte: <span id="score">0</span> | Highscore: <span id="highscore">0</span>
</div>

<div id="gameArea">
  <div id="car"></div>
</div>

<div class="controls">
  <button class="btn" id="leftBtn">Links</button>
  <button class="btn" id="rightBtn">Rechts</button>
</div>

<script>
  const gameArea = document.getElementById("gameArea");
  const car = document.getElementById("car");
  const scoreEl = document.getElementById("score");
  const highscoreEl = document.getElementById("highscore");
  const leftBtn = document.getElementById("leftBtn");
  const rightBtn = document.getElementById("rightBtn");

  let gameRunning = true;
  let score = 0;
  let carPosPercent = 45;
  let obstacleInterval, scoreInterval;

  const highscore = localStorage.getItem("highscore") || 0;
  highscoreEl.innerText = highscore;

  function moveCar(direction) {
    if (!gameRunning) return;
    if (direction === "left" && carPosPercent > 0) {
      carPosPercent -= 5;
    } else if (direction === "right" && carPosPercent < 90) {
      carPosPercent += 5;
    }
    car.style.left = `${carPosPercent}%`;
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") moveCar("left");
    else if (e.key === "ArrowRight") moveCar("right");
  });

  leftBtn.addEventListener("touchstart", () => moveCar("left"));
  rightBtn.addEventListener("touchstart", () => moveCar("right"));

  function createObstacle() {
    const obs = document.createElement("div");
    obs.classList.add("obstacle");
    obs.style.left = Math.floor(Math.random() * 10) * 10 + "%";
    gameArea.appendChild(obs);

    let topPercent = -20;
    const move = setInterval(() => {
      topPercent += 2;
      obs.style.top = topPercent + "%";

      if (topPercent > 100) {
        obs.remove();
        clearInterval(move);
      }

      const carBox = car.getBoundingClientRect();
      const obsBox = obs.getBoundingClientRect();

      if (
        carBox.left < obsBox.left + obsBox.width &&
        carBox.right > obsBox.left &&
        carBox.top < obsBox.top + obsBox.height &&
        carBox.bottom > obsBox.top
      ) {
        gameOver();
        clearInterval(move);
      }
    }, 30);
  }

  function startScore() {
    scoreInterval = setInterval(() => {
      score++;
      scoreEl.innerText = score;
    }, 1000);
  }

  function startGame() {
    startScore();
    obstacleInterval = setInterval(createObstacle, 1000);
  }

  function gameOver() {
    gameRunning = false;
    clearInterval(obstacleInterval);
    clearInterval(scoreInterval);
    if (score > highscore) {
      localStorage.setItem("highscore", score);
    }
    alert("Game Over! Punkte: " + score);
    location.reload();
  }

  startGame();
</script>

</body>
</html>
